	<div class="avorg-molecule-mediaObject__text">
		{% if titleUrl %}<a href="{{ titleUrl }}">{% endif %}
			<h1 class="avorg-molecule-mediaObject__title">{{ title }}</h1>
		{% if titleUrl %}</a>{% endif %}

		<div class="avorg-molecule-mediaObject__description">
			{{ description }}
		</div>
	</div>
</div>